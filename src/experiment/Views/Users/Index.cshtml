@{
    ViewData["Title"] = "Beers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Bar.Models.Beer>

<h1>List of Beers</h1>
<hr />
@foreach (Bar.Models.Beer beer in Model)
{
    <a href="/Beers/Details/@beer.BeerId">
        <div class="card">
            <div class="card-content">
                <h4>
                    @beer.Name
                </h4>
            </div>
        </div>
    </a>
}