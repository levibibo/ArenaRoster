<!DOCTYPE html>

<html>
<head>
    <link href='~/img/favicon.png' rel="icon" />

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />

    <!-- Compiled and minified JavaScript -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar-fixed">
        <nav class="green darken-4">
            <div class="nav-wrapper">
                <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
                <a asp-controller="Home" asp-action="Index" class="brand-logo center">RecTeam</a>
                <ul class="right hide-on-med-and-down">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Teams" asp-action="Create">Add New Team</a></li>
                        <li><a asp-controller="Account" asp-action="Index">@User.Identity.Name's Account</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Index">Login</a></li>
                    }
                </ul>
            </div>
        </nav>
    </div>

    <ul id="slide-out" class="side-nav">
        <a asp-controller="Home" asp-action="Index" class="brand-logo center"><h1>RecTeam</h1></a>
        @if (User.Identity.IsAuthenticated)
        {
            <li><a asp-controller="Teams" asp-action="Create">Add New Team</a></li>
            <li><a asp-controller="Account" asp-action="Index">@User.Identity.Name's Account</a></li>
        }
        else
        {
            <li><a asp-controller="Account" asp-action="Index">Login</a></li>
        }
    </ul>

    <script>
        $(function () {
            $(".button-collapse").sideNav({
                menuWidth: '80%',
                closeOnClick: true,
                draggable: true
            });
        })
    </script>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="page-footer green darken-4">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">RecTeam</h5>
                    <p class="grey-text text-lighten-4"></p>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © 2017 Copyright Levi Bibo
            </div>
        </div>
    </footer>
</body>
</html>
