@{
    ViewData["Title"] = $"Roster - {Model.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ArenaRoster.Models
@model Team

<h1>@Model.Name</h1>
<hr />

<h4>Team Roster</h4>
<div class="row">
    <div class="col s4">
        <h5>Name</h5>
    </div>
    <div class="col s4">
        <h5>Email</h5>
    </div>
    <div class="col s4">
        <h5>Phone</h5>
    </div>
</div>
<div class="row">
    @foreach (ApplicationUser teammate in ViewBag.Roster)
    {
        <div class="col s4">
            <p>@teammate.Name</p>
        </div>
        <div class="col s4">
            <p><a href="mailto:@teammate.Email">@teammate.Email</a></p>
        </div>
        <div class="col s4">
            <p><a href="tel:@teammate.PhoneNumber">@teammate.PhoneNumber</a></p>
        </div>
    }
</div>