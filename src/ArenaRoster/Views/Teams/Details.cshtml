@model ArenaRoster.Models.Team
@{
    ViewData["Title"] = "@Model.Name";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Name</h1>
<hr />
<h4>Add Player:</h4>
@using (Html.BeginForm())
{
    <label for="UserId">User: </label>
    <select class="browser-default" name="selectedUser" asp-items="@ViewBag.Users"></select>

    <input class="btn" type="submit" value="Add User" />
}

<h4>@Model.Name's Roster</h4>
@{
    @foreach(ArenaRoster.Models.UserTeam beerTeam in Model.UserTeams)
    {
        <p>@beerTeam.User.Name</p>
    }
}