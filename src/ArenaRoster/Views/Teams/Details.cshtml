@{
    ViewData["Title"] = @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ArenaRoster.Models
@model ArenaRoster.Models.Team

<div class="navbar-fixed">
    <nav class="green darken-4">
        <div class="nav-wrapper">
            <ul class="left hide-on-med-and-down">
                <li class="active">@Html.ActionLink("Roster", "Details")</li>
                <li>@Html.ActionLink("Schedule", "Schedule")</li>
            </ul>
            <a href="/" class="brand-logo center hide-on-med-and-down">ArenaRoster</a>
            <ul class="right hide-on-med-and-down">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="/Teams/Create">Add New Team</a></li>
                    <li><a href="/Account">@User.Identity.Name's Account</a></li>
                }
                else
                {
                    <li><a href="/Account">Login</a></li>
                }
            </ul>
        </div>
    </nav>
</div>

<div class="container">
    <h1>@Model.Name</h1>
    <hr />

    <h4>@Model.Name's Roster</h4>
    <div class="row">
        <div class="col s4">
            <h5>Name</h5>
        </div>
        <div class="col s4">
            <h5>Email</h5>
        </div>
        <div class="col s4">
            <h5>Phone</h5>
        </div>
    </div>
    <div class="row">
        @{
            @foreach (Player player in ViewBag.Roster)
            {
                <div class="col s4">
                    <p>@player.Name</p>
                </div>
                <div class="col s4">
                    <p><a href="mailto:@player.AppUser.Email">@player.AppUser.Email</a></p>
                </div>
                <div class="col s4">
                    <p><a href="tel:@player.AppUser.PhoneNumber">@player.AppUser.PhoneNumber</a></p>
                </div>
            }
        }
    </div>
</div>