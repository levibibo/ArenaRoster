@model ArenaRoster.Models.Team
@{
    ViewData["Title"] = "@Model.Name";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="navbar-fixed">
    <nav class="green darken-4">
        <div class="nav-wrapper">
            <ul class="left hide-on-med-and-down"></ul>
            <a href="/" class="brand-logo center hide-on-med-and-down">ArenaRoster</a>
            <ul class="right hide-on-med-and-down">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="/Teams/Create">Add New Team</a></li>
                    <li><a href="/Account">@User.Identity.Name's Account</a></li>
                }
                else
                {
                    <li><a href="/Account">Login</a></li>
                }
            </ul>
        </div>
    </nav>
</div>

<div class="container">
    <h1>@Model.Name</h1>
    <hr />
    <h4>Add Player:</h4>
    @using (Html.BeginForm())
    {
        <label for="UserId">User: </label>
        <select class="browser-default" name="selectedUser" asp-items="@ViewBag.Users"></select>

        <input class="btn" type="submit" value="Add User" />
    }

    <h4>@Model.Name's Roster</h4>
    @{
        @foreach(ArenaRoster.Models.PlayerTeam beerTeam in Model.UserTeams)
        {
            <p>@beerTeam.User.Name</p>
        }
    }
</div>