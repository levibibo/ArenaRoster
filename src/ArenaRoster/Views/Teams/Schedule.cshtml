@{
    ViewData["Title"] = $"Schedule - {ViewBag.Team.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ArenaRoster.Models
@model List<Game>

<h1>@ViewBag.Team.Name</h1>
<hr />

<h4>Team Schedule</h4>
<div class="row">
    <div class="col s4">
        <h5>Date</h5>
    </div>
    <div class="col s4">
        <h5>Time</h5>
    </div>
    <div class="col s4">
        <h5>Committed Players</h5>
    </div>
</div>
    @foreach (Game game in Model)
    {
        <div class="row">
            <div class="col s12 m6">
                <p>@game.Date</p>
            </div>
            <div class="col s12 m6">
                <p>@game.Location</p>
            </div>
        </div>
        <div class="row">
            @foreach (Availability teammate in game.AvailablePlayers)
            {
                @foreach (ApplicationUser user in ViewBag.Roster)
                {
                    @if (user == teammate.User)
                    {
                        <div class="col s12">
                            <p>
                                @user.Name - 
                                @if (teammate.Available)
                                {
                                    <span class="green">Available</span>
                                }
                                else
                                {
                                    <span class="red">Not Available</span>
                                }
                            </p>
                        </div>
                    }
                }
            }
        </div>
    }