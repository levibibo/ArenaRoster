@using ArenaRoster.Models
@model List<Team>

@if (Model.Count > 0)
{
    @foreach (Team team in Model)
    {
        <div class="col s12 m4">
            <a href="/Teams/Details/@team.Id">
                @if (team.TeamManager.UserName == User.Identity.Name)
                {
                    <div class="card hoverable blue lighten-2">
                        <div class="card-content">
                            <p class="card-title center">@team.Name</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card hoverable green lighten-2">
                        <div class="card-content">
                            <p class="card-title center">@team.Name</p>
                        </div>
                    </div>
                }
            </a>
        </div>
    }
}
else
{
    <h3>You are not on any teams.</h3>
    <a asp-controller="Teams" asp-action="Create">Click here to create a new team.</a>
}